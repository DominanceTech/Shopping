@model IEnumerable<UploadDataToDB.ViewModel.ContentViewModel>

@*@model IEnumerable<UploadDataToDB.ViewModel.ContentViewModel>*@
<h2><center> Cart </center></h2>
@{
    ViewBag.Title = "Myorder";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@{
    int sum = 0;
}
<style>
    .box {
        width: 100%;
        height: 100%;
        border: 1px solid Black;
        box-sizing: border-box;
    }

</style>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"> </script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"> </script>

@if (@ViewBag.Total != 0)
{
    <div id="dvContents">
        @*<table class="table table-hover" width="100%">*@
        @*<thead>
                <tr>

                    <th>

                    </th>
                    <th>       </th>
                    <th>Product Name</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Total Price</th>
                    <th>Action</th>
                </tr>
            </thead>*@



        @foreach (var item in Model)
                {
            <div class="jumbotron" style="height:160px;margin-top:15px; margin-bottom:15px; line-height:1.4;font-size:15px;">
                <div style="margin-top:-19px;">
                    <a href="@Url.Action("MyorderPartial","Home",new {UserId = item.UserId})">UserName <b style="margin-left:9.5px;margin-right:5px;">:</b> @item.UserName &nbsp;(@item.Email)</a>
                </div>
                <div>
                    Date <b style="margin-left:48.5px; margin-right:3px;"> :</b> <b>@DateTime.Now.ToString("ddd")</b> &nbsp;
                    <b>
                       @DateTime.Now.ToString("dd MMM yyyy")
                    </b>
                </div>
                <div>
                    Total Price<b style="margin-left:9.5px;margin-right:5px;"> :</b><b>@Html.DisplayFor(modelItem => item.price)
                    </b>
                
                </div>
                <div>
                    No. of Items<b style="margin-left:-1px; margin-right:5px;"> :</b><b>@Html.DisplayFor(modelItem => item.Quantity)</b>&nbsp; Items
                </div>
              
                <div><button class="btn btn-info btn-sm">@Html.ActionLink("ADD More Product", "Display", "Home", new {style="color:white"})</button>
                  &nbsp;  @*<button class="btn_Confirmation btn btn-info btn-sm">@Html.ActionLink("Confirm Order", "AdminOrderConfirmation", "Home", new { UserId = item.UserId })</button>*@
                    <a href="@Url.Action("OrderConfirmation","Home",new {UserId = item.UserId})"><button class="btn_Confirmation btn btn-info btn-sm">Confirm Order</button></a>
</div>
            </div>         

        }
    </div>

}
else
{
 <h1 style="color:red;">Your Cart is Empty</h1>
}
