@*@model IEnumerable<UploadDataToDB.Models.Order>*@
@model IEnumerable<UploadDataToDB.ViewModel.OrderViewModel>
@{
    ViewBag.Title = "CheckOrders";
}

@*<td> <img src="data:image;base64,@System.Convert.ToBase64String(item.Image)" width="200" height="150" /></td>*@

@*<h2>Your Orders</h2>*@

       @foreach (var item in Model)
       {

        <div class="jumbotron" style="height:160px;margin-top:15px; margin-bottom:15px; line-height:1.4;font-size:15px;">
            <div style="margin-top:-29px;">
             <div>User Name <b style="margin-right:5px;">&nbsp; :</b> <b>@item.UserName (@item.Email)</b></div>
                @*@Html.ActionLink("Profile", "OrderClick", "Home", new { OrderId = item.OrderId.ToUpper() }, null)*@
                <a href="@Url.Action("OrderClick","Home",new { OrderId = item.OrderId.ToUpper(), UserId=item.UserId})">
                    @*<a class="orderclick" id="@item.OrderId">*@
                    Order Id <b style="margin-left:26.5px; margin-right:5px;">&nbsp;:</b> <b>@Html.DisplayFor(modelItem => item.OrderId)</b>
                </a>

                <div>
                    Order Status <b>:</b>  <b>
                        @Html.DisplayFor(modelItem => item.OrderStatus)

                </b>
              </div>

                <div>
                  Date <b style="margin-left:48.5px; margin-right:3px;"> &nbsp;:</b> <b>@item.DateTime.Value.ToString("ddd")</b> &nbsp;
                    <b>
                        @item.DateTime.Value.ToString("dd MMM yyyy")
                </b>
            </div>

        
            <div>
                Total Price<b style="margin-left:9.5px;margin-right:5px;"> &nbsp;:</b><b>@Html.DisplayFor(modelItem => item.Price)</b>
            </div>
            <div>
              No. of Items<b style="margin-left:-1px; margin-right:5px;"> &nbsp;:</b><b>@Html.DisplayFor(modelItem => item.Quantity)</b>&nbsp; Items
            </div>
        </div>

    </div>

       }



