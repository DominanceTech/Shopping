@model IEnumerable<UploadDataToDB.ViewModel.OrderViewModel>
@{
    ViewBag.Title = "CheckOrders";
}

@*<td> <img src="data:image;base64,@System.Convert.ToBase64String(item.Image)" width="200" height="150" /></td>*@

@*<h2>Your Orders</h2>*@

       @foreach (var item in Model)
       {

        <div class="jumbotron" style="height:150px;margin-top:15px; margin-bottom:15px; line-height:1.4;font-size:15px;">
            <div style="margin-top:-19px;">
                <div>
                    OrderStatus&nbsp;: &nbsp; <b>@Html.DisplayFor(modelItem => item.OrderStatus)
                  
                    </b>   
                </div>
                @*@Html.ActionLink("Profile", "OrderClick", "Home", new { OrderId = item.OrderId.ToUpper() }, null)*@
                <a href="@Url.Action("OrderClick","Home",new { OrderId = item.OrderId.ToUpper()})">
                    @*<a class="orderclick" id="@item.OrderId">*@
                    OrderId &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;: &nbsp; <b>@Html.DisplayFor(modelItem => item.OrderId)</b>
                </a>


                <div>
                    <b>@item.DateTime.Value.ToString("ddd")</b> &nbsp;
                    <b>
                        @item.DateTime.Value.ToString("dd MMM yyyy")
                </b>
            </div>

        
            <div>
                Total Price &nbsp;&nbsp;: &nbsp;<b>@Html.DisplayFor(modelItem => item.Price)</b>
            </div>
            <div>
                <b>@Html.DisplayFor(modelItem => item.Quantity)</b>&nbsp; Items
            </div>
        </div>

    </div>

       }



